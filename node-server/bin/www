#!/usr/bin/env node

/**
 * Module dependencies.
 */
/* eslint-disable */

const app = require('../app');

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

const port = normalizePort(process.env.PORT || '5550');
const httpPort = normalizePort(process.env.HTTP_PORT);
app.bootstrap(port, httpPort);
console.log(`Listening on ${port} (https)`);
if (httpPort) {
  console.log(`Redirects from ${httpPort} to ${port}`)
}

if (process.env.NODE_ENV === 'development') {
  console.log('Development mode started');
}
